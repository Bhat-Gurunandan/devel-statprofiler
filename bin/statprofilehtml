#!/usr/bin/perl
# PODNAME: statprofilehtml
# ABSTRACT: generate Devel::StatProfiler HTML report

use 5.12.0;
use warnings;

use Devel::StatProfiler::Report;

my $outdir = 'statprof';

my $report = Devel::StatProfiler::Report->new(
    flamegraph => 1,
    slowops    => [],
);
for my $f (glob('statprof.out.*')) {
    $report->add_trace_file($f);
}

$report->output($outdir);
